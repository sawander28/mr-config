# 20. cmdline

[$HOME/repos/cmdline/extrace]
checkout = git clone git@rpi3.lan:extrace.git
clean = rm -f /usr.home.local/bin/{extrace,pwait}
fixups =
  git_ensure_remote upstream git://git.vuxu.org/extrace
  sudo make install clean && info "Installed $STOW_NAME"

[$HOME/repos/cmdline/xe]
checkout = git clone git@rpi3.lan:xe.git
fixups =
  git_ensure_remote upstream git://git.vuxu.org/xe
  sudo make install clean && info "Installed $STOW_NAME"


[$HOME/repos/cmdline/logcatch]
checkout = git clone git@rpi3.lan:logcatch.git
remotes =
fixups =
  git_ensure_remote upstream git://git.vuxu.org/logcatch
  sudo make install clean && info "Installed $STOW_NAME"

[$HOME/repos/cmdline/direnv]
checkout = git clone git@rpi3.home.lan:direnv.git
remotes = git remote add upstream git@github.com/direnv/direnv.git
fixups = sudo make install && info "Installed direnv"
skip = true

[$HOME/repos/cmdline/libarchive]
checkout = git clone git@rpi3.home.lan:libarchive.git
fixups =
  git_ensure_remote upstream https://github.com/libarchive/libarchive.git
  [ -f ./configure ] || autoreconf -fi
  ./configure --prefix=/usr/local
  sudo make install
skip = true

