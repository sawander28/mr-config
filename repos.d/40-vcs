# 40. vcs

[$HOME/repos/vcs/git]
checkout = git clone git@rpi3.lan:git.git
fixups =
  git_ensure_remote upstream git@github.com:git/git.git
  [ -f ./configure ] || autoreconf -fi
  make configure
  ./configure --prefix=/home/wandsas/git
  make all doc
  make install 
# make install-doc install-html
skip = true

[$HOME/repos/vcs/pass]
checkout = git clone git@rpi3.lan:pass.git
fixups =
  git_ensure_remote upstream https://git.zx2c4.com/password-store
  sudo make PREFIX=/usr/local WITH_BASHCOMP=yes WITH_ZSHCOMP=y install
  sudo install contrib/dmenu/passmenu /usr/local/bin

