
# 60. Desktop


[$HOME/repos/desktop/mpdris2-rs]
checkout = git clone git@rpi3.lan:mpdris2-rs.git
fixups =
  git_ensure_remote upstream git@github.com:szclsya/mpdris2-rs.git
  if [ -f /usr/local/bin/mpdris2-rs ]; then
    info "Installed /usr/local."
  else
    cargo build --release
    sudo install -m 0755 target/release/mpdris2-rs /usr/local/bin/mpdris
  fi

# vim: fenc=utf-8 ft=sh ts=2 sts=2 sw=2 et
