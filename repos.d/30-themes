
# 30. Themes

[$HOME/repos/themes/fluent-gtk-theme]
checkout = git clone git@rpi3.lan:fluent-gtk-theme.git
fixups = git_ensure_remote upstream https://github.com/vinceliuice/Fluent-gtk-theme.git
update = ./install.sh --dest $XDG_DATA_HOME/themes

[$HOME/repos/themes/icons/fluent-icon-theme]
checkout = git clone git@rpi3.lan:fluent-icon-theme.git
fixups = git_ensure_remote upstream https://github.com/vinceliuice/Fluent-icon-theme.git
update = ./install.sh --dest $XDG_DATA_HOME/icons

[$HOME/repos/themes/icons/plan9-xcursor-theme]
checkout = git clone git@rpi3.lan:plan9-xcursor-theme.git
fixups = git_ensure_remote upstream https://github.com/wintermute-cell/xcursor-plan9.git
update = install -d -m0755 ~/repos/themes/plan9-xcursor-theme $XDG_DATA_HOME/icons/plan9

[$HOME/repos/themes/fonts/5x13]
checkout = git clone git@rpi3.lan:5x13.git
fixups = git_ensure_remote upstream https://github.com/leahneukirchen/5x13.git
update = mkdir -p $XDG_DATA_HOME/fonts/5x13 && cp -r ~/repos/themes/fonts/5x13/{fonts.dir,5x13.bdf} $XDG_DATA_HOME/fonts

[$HOME/repos/themes/fonts/codec]
checkout = git clone git@rpi3.lan:codec.git
fixups = git_ensure_remote upstream https://github.com/leahneukirchen/codec.git
update = mkdir -p $XDG_DATA_HOME/fonts/codec && cp ~/repos/themes/fonts/codec/{fonts.dir,codec-terminal-narrow.bdf,codec-terminal.bdf,codec-text.bdf,codec-text.psf,codec.bdf} $XDG_DATA_HOME/fonts

[$HOME/repos/themes/sq]
checkout = git clone git@rpi3.lan:sq.git
fixups = git_ensure_remote upstream https://github.com/leahneukirchen/sq.git
update = mkdir -p $XDG_DATA_HOME/fonts/sq && cp ~/repos/themes/{fonts.dir,sq.pcf,sqb.pcf} $XDG_DATA_HOME/fonts

